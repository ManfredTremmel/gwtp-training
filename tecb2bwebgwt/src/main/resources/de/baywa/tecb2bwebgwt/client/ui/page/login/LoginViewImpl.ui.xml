<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

   <ui:style src="LoginViewImpl.gss" />

   <g:HTMLPanel styleName="{style.centerPanel}">
    <table class="{style.loginForgot}" border="0" cellpadding="5"
      cellspacing="0">
      <thead>
        <tr>
          <th colspan="2" class="">Login</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td colspan="2" class="{style.separator}"></td>
        </tr>
        <tr>
          <td colspan="2"></td>
        </tr>
        <!-- login_container -->
        <tr class="">
          <td class="fistCol">
            <label for="customerId">Kundennummer</label>
          </td>
          <td>
            <g:TextBox ui:field="inpUser" />
          </td>
        </tr>
        <tr class="">
          <td class="">
            <label for="password">Passwort</label>
          </td>
          <td>
            <g:PasswordTextBox ui:field="inpPwd" />
          </td>
        </tr>
        <tr class="">
          <td></td>
          <td>
            <g:Button ui:field="btLogin" stylePrimaryName="{style.submitLogin}">
              Login
            </g:Button>
          </td>
        </tr>
        <tr class="">
          <td></td>
          <td>
            <div id="forgot-form">
              <!-- forgot-form -->
              <a href="#" class="{style.linking}">»&nbsp;Passwort vergessen</a>
            </div> <!-- /forgot-form -->
          </td>
        </tr>
        <tr>
          <td colspan="2" class="{style.separator}"></td>
        </tr>
        <tr class="">
          <td></td>
          <td>
            <div id="register-form">
              <!-- register-form -->
              Sie sind ein neuer Vertragspartner und möchten unsere
              Bestellplattform nutzen:
              <br />
              <a href="#" class="{style.linking}">»&nbsp;Zum Kontaktformular</a>
              <br />
              <br />
            </div> <!-- /register-form -->
          </td>
        </tr>
      </tbody>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>
