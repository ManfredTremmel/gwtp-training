.navigation {
  margin: 0;
  text-align: center;
}
.navigation a {
  float: left;
  text-align: center;
	padding: 4px 12px 5px 12px;
  text-decoration: none;
  font-weight: bold;
  display: inline;
  color: #000;
  background-color: #d0d789;
  cursor: pointer;
}
.navigation a:hover {
  color: #FFF;
  background-color: #9dab00;
  text-decoration: none;
}
